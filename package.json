{
  "name": "eventmit",
  "version": "2.0.2",
  "description": "One event per one event.",
  "keywords": [
    "events",
    "eventemitter"
  ],
  "homepage": "https://github.com/azu/eventmit",
  "bugs": {
    "url": "https://github.com/azu/eventmit/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/eventmit.git"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "dist/",
    "module/",
    "lib/",
    "src/"
  ],
  "type": "module",
  "source": "src/eventmit.ts",
  "main": "lib/eventmit.js",
  "types": "module/eventmit.d.ts",
  "module": "module/eventmit.js",
  "exports": {
    ".": {
      "types": "./module/eventmit.d.ts",
      "import": "./module/eventmit.js",
      "require": "./lib/eventmit.js",
      "default": "./lib/eventmit.js"
    },
    "./package.json": "./package.json"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "tsc -p . && tsc -p ./tsconfig.cjs.json && tsconfig-to-dual-package",
    "clean": "git clean -fx lib/ dist/",
    "prepublish": "npm run --if-present build",
    "test": "mocha",
    "watch": "tsc -p . --watch",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "lint-staged": "^13.1.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "tsconfig-to-dual-package": "^1.0.6",
    "typescript": "^4.9.4"
  }
}
