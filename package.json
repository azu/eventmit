{
  "name": "eventmit",
  "version": "1.1.0",
  "description": "One event per one event.",
  "keywords": [
    "events",
    "eventemitter"
  ],
  "homepage": "https://github.com/azu/eventmit",
  "bugs": {
    "url": "https://github.com/azu/eventmit/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/eventmit.git"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "dist/",
    "lib/",
    "src/"
  ],
  "source": "src/eventmit.ts",
  "main": "dist/eventmit.js",
  "types": "dist/eventmit.d.ts",
  "module": "dist/eventmit.module.js",
  "esmodule": "dist/eventmit.modern.js",
  "unpkg": "dist/eventmit.umd.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "microbundle",
    "clean": "git clean -fx lib/ dist/",
    "prepublish": "npm run --if-present build",
    "test": "mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.33",
    "cross-env": "^7.0.2",
    "lint-staged": "^12.4.1",
    "microbundle": "^0.15.0",
    "mocha": "^10.0.0",
    "prettier": "^2.8.3",
    "ts-node": "^10.7.0",
    "ts-node-test-register": "^10.0.0",
    "typescript": "^4.6.4"
  }
}
